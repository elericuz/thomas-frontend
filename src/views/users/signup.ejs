<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body class="body-sign-in-up">

<div class="grid-container vertical-center medium-6 large-9 small-11 sign-in-up-box">
    <div class="grid-x grid-margin-x">
        <div class="cell hide-for-small large-6 margin-0">
            <div class="signup-img-div"></div>
        </div>
        <div class="cell small-12 large-6 padding-1 margin-0">
            <form method="post" action="/user/signup">
                <div class="logo-container margin-bottom-0 padding-2">
                    <img src="/assets/img/logo-site.png">
                </div>
                <div class="medium-12 cell text-center">
                    <h3 class="title">Registro de Usuarios</h3>
                </div>
                <div class="cell small-12">
                    <div class="callout alert margin-0 padding-1 login" data-closable id="alertContainer">
                        <h5>Ohh no!</h5>
                        <span id="message"></span>
                    </div>
                </div>
                <div class="medium-12 cell margin-top-1">
                    <div class="grid-x">
                        <div class="cell small-1 login-icons">
                            <div class="fi-pencil">&nbsp;</div>
                        </div>
                        <div class="cell auto">
                            <input type="text" name="name" id="name" autocomplete="off"
                                   placeholder="Nombre">
                        </div>
                    </div>
                </div>
                <div class="medium-12 cell">
                    <div class="grid-x">
                        <div class="cell small-1 login-icons">
                            <div class="fi-pencil">&nbsp;</div>
                        </div>
                        <div class="cell auto">
                            <input type="text" name="lastname" id="lastname" autocomplete="off"
                                   placeholder="Apellido">
                        </div>
                    </div>
                </div>
                <div class="medium-12 cell">
                    <div class="grid-x">
                        <div class="cell small-1 login-icons">
                            <div class="fi-at-sign">&nbsp;</div>
                        </div>
                        <div class="cell auto">
                            <input type="text" name="email_address" id="email_address" autocomplete="off"
                                   placeholder="Correo ElectrÃ³nico">
                        </div>
                    </div>
                </div>
                <div class="medium-12 cell">
                    <div class="grid-x">
                        <div class="cell small-1 login-icons">
                            <div class="fi-key">&nbsp;</div>
                        </div>
                        <div class="cell auto">
                            <input type="password" name="password" id="password" autocomplete="new-password"
                                   placeholder="Password">
                        </div>
                    </div>
                </div>
                <div class="medium-12 cell margin-top-3 margin-bottom-2">
                    <button type="submit" class="button secondary padding-left-2 padding-right-2 float-center">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/scripts.ejs') %>
</body>
</html>